{% extends 'base.html.twig' %}
{% block title %}Hello PriceController!{% endblock %}
{% block stylesheets %}
    <style>
        .parent {
            overflow: hidden;
            width: 50%;
            height: 250px;
            position: relative;
        }

        .ribbon {
            margin: 0;
            padding: 7px;
            position: absolute;
            top: 0;
            right: 0;
            transform: translateX(30%) translateY(0%) rotate(45deg);
            transform-origin: top left;
            font-weight: bold;
        }

        .ribbon:before,
        .ribbon:after {
            content: '';
            position: absolute;
            top: 0;
            margin: 0 -1px;
            width: 100%;
            height: 100%;
        }

        .ribbon:before {
            right: 100%;
        }

        .ribbon:after {
            left: 100%;
        }

        /* WEB PRICE STYLE */
        .conditioned_promotion {
            background: yellow;
            color: red;
        }

        .conditioned_promotion:before,
        .conditioned_promotion:after {
            background: yellow;
        }

        /* END WEB PRICE STYLE */

        /* PROMO STYLE */
        .standard_promo {
            background: red;
            color: yellow;
        }

        .standard_promo:before,
        .standard_promo:after {
            background: red;
        }

        /* END PROMO STYLE */

        /* FLASH */
        .flash_promotion, .special_offer {
            background: yellow;
            color: black;

        }

        .special_offer:before,
        .special_offer:after,
        .flash_promotion:before,
        .flash_promotion:after {
            background: yellow;
        }

        /* END FLASH*/


        .promo_web {
            background: rebeccapurple;
            color: white;
        }
    </style>
{% endblock %}
{% block body %}
    {% for reference in resolvedReferences %}
        <div class="row">
            <div class="col-12">
                {{ renderReference(reference) | raw }}
            </div>
        </div>
    {% endfor %}
{% endblock %}
